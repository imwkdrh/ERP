package chapter1;

public class Control {
	public static void main(String[] args) {
		
		//	코드 블럭
		//	코드들의 묶음 (하나의 기능으로 취급)
		//	{}로 표시
		int c = 30;
		{
			//	더하기 연산
			int a = 10;
			int b = 20;
			int result = a+b;
			System.out.println(result);
		}
		
		{
			//	빼기 연산
			int a = 10;
			int b = 5;
			int result = a-b;
			System.out.println(result);
		}
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	}
}
